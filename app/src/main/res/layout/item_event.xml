<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/item_event.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shape"
    android:layout_margin="5dp"
    android:backgroundTint="#F99417"
    >

    <TextView
        android:id="@+id/namaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Event: "
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:fontFamily="@font/poppins"/>
    <TextView
        android:id="@+id/TanggalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tanggal : "
        android:paddingLeft="5dp"
        android:fontFamily="@font/poppins"/>


    <TextView
        android:id="@+id/border2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentBottom="true"
        android:background="#808080"/>

    <!-- Button "Pantau Event" -->
    <Button
        android:id="@+id/lihat_event_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lihat Event"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/tambah_trip_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tambah Trip"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

</LinearLayout>
