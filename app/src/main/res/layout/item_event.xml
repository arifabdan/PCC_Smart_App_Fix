<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/item_event.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shape"
    android:layout_margin="5dp"
    android:backgroundTint="#F99417"
    >

    <TextView
        android:id="@+id/namaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Event: "
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:fontFamily="@font/poppins"/>
    <TextView
        android:id="@+id/StartTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start : "
        android:paddingLeft="5dp"
        android:fontFamily="@font/poppins"/>
    <TextView
        android:id="@+id/FinishTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finish : "
        android:paddingLeft="5dp"
        android:fontFamily="@font/poppins"/>
    <TextView
        android:id="@+id/TanggalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tanggal : "
        android:paddingLeft="5dp"
        android:fontFamily="@font/poppins"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center">

        <Button
            android:id="@+id/lihatButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lihat"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins"
            android:backgroundTint="@color/white"/>

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins"
            android:backgroundTint="#B31312"/>
    </LinearLayout>

    <TextView
        android:id="@+id/border2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentBottom="true"
        android:background="#808080"/>

</LinearLayout>
